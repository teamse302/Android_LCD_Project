                        android:id="@+id/tab_thursday_button2"
                        android:background="@drawable/shape"
                        android:layout_above="@+id/tab_thursday_button1"
                        android:layout_centerHorizontal="true" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tab_thursday_edittext"
                        android:layout_above="@+id/tab_thursday_button2"
                        android:layout_centerHorizontal="true"
                        android:textColor="#ffffff" />

                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/tab_thursday_listview"
                        android:layout_above="@+id/tab_thursday_edittext"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/tab_friday"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CLEAR"
                        android:id="@+id/tab_friday_button1"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/shape"
                        android:layout_centerHorizontal="true" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ADD"
                        android:id="@+id/tab_friday_button2"
                        android:layout_above="@+id/tab_friday_button1"
                        android:background="@drawable/shape"
                        android:layout_centerHorizontal="true" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tab_friday_edittext"
                        android:layout_above="@+id/tab_friday_button2"
                        android:layout_centerHorizontal="true"
                        android:textColor="#ffffff" />

                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/tab_friday_listview"
                        android:layout_above="@+id/tab_friday_edittext"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/tab_saturday"
