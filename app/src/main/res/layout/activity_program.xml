                        android:layout_height="wrap_content"
                        android:text="ADD"
                        android:id="@+id/tab_sunday_button2"
                        android:background="@drawable/shape"
                        android:layout_above="@+id/tab_sunday_button1"
                        android:layout_centerHorizontal="true" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tab_sunday_edittext"
                        android:layout_above="@+id/tab_sunday_button2"
                        android:layout_centerHorizontal="true"
                        android:textColor="#ffffff" />

                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/tab_sunday_listview"
                        android:layout_above="@+id/tab_sunday_edittext"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>
</RelativeLayout>
